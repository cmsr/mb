%div.dashboard_header
  %div.title
    Dashboard
  %div.options


#options

  //personal info
  -if current_uri = request.env['PATH_INFO'] == business_dashboard_path
    %span.selected
      Os meus negócios
  -else
    %span
      =link_to "Os meus negócios", business_dashboard_path
  
  //personal info
  -if current_uri = request.env['PATH_INFO'] == user_profile_path
    %span.selected
      Negócios registados 
  -else
    %span
      =link_to "Negócios registados", user_profile_path

  //preferences
  -if current_uri = request.env['PATH_INFO'] == user_preferences_path
    %span.selected
      Preferênicas
  -else
    %span
      =link_to "Preferênicas", user_preferences_path
      
  //change passowd
  -if current_uri = request.env['PATH_INFO'] == user_change_password_path
    %span.selected
      Alterar password 
