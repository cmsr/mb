!!! Strict
%html
  %head
    %meta{'http-equiv' => 'Content-Type', :content => "text/html; charset=iso-8859-1"}
    %title= yield :title
    = stylesheet_link_tag 'default.css', :media => 'screen, projection'
    =  yield :more_stylesheets
    /[if lt IE 8]
      /= stylesheet_link_tag 'defaultie.css', :media => 'screen, projection'
    
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    #root
      =render :partial=>"shared/flash", :locals=>{:flash=>flash}
      #main
        #header
          #logo
            =link_to image_tag("medibooking.logo.png"), root_path
          #session
            =render :partial=>"shared/user_session"
        #content
          = yield
        #footer
          =render :partial=>"shared/footer"
		
