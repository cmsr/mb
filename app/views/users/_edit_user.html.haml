=simple_form_for edit_user, :remote=>true do |f|
  =f.input :first_name
  =f.input :last_name
  =f.input :email
  =f.input :phone
  =f.input :address
  =f.input :postal_code, :hint=>t("activerecord.hints.generic.postal-code")
  =f.input :city
  
  = f.submit t "actions.update"
  =link_to "Cancelar", user_profile_path, :id=>"cancel_user_edit", :class=>"link_as_button cancel_button"
  
 